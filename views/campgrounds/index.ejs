<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>

    <h1 class="my-3">All campgrounds</h1>
    
    <% for(let camp of campgrounds) { %>
        <!-- <li><a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a></li> -->

        <div class="card mb-3">
            <div class="row">
                <div class="col-lg-5 col-xl-4 ">
                    <% if(camp.images.length){  %>
                        <img src="<%= camp.images[0].url %>" class="card-img-top" alt="...">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dfkaodmtf/image/upload/v1700924141/YelpCamp/yf4i4bsshmzoocqcjswi.jpg" class="card-img-top" alt="...">
                    <% } %>
                </div>
                <div class="col-lg-7 col-xl-8 px-4 py-3">
                  <h5 class="card-title"><%= camp.title %></h5>
                  <p class="card-text"><%= camp.description %></p>
                  <p class="card-text text-muted"><%= camp.location %></p>
                  <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">See <%= camp.title %></a>
                </div>
            </div>
          </div>
    <% } %>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
    </script>

    <script src="/javascripts/clusterMap.js"></script>
